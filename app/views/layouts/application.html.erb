<!DOCTYPE html>
<html>
<head>
  <title>Yukasport2203</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand px-2" href="#">LES ZOZOS</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse px-5" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link text-primary" href="#">Marques</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-primary" href="#">Blog</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-primary" href="#">A propos de nous</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-primary" href="#">Contact</a>
        </li>
      </ul>
    </div>
    <div class="collapse navbar-collapse justify-content-end align-items-center" id="navbarSupportedContent1">
      <ul>
        <% if user_signed_in? %>
          <li>
            <%= current_user.email %>
          </li>
          <li>
            <%= link_to "Mon profil", user_path(current_user.id)%>
          </li>
          <li>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete%>
          </li>
        <% else %>
      <ul class="navbar-nav">
            <li class="nav-item"><a href="<%=new_user_session_path%>" class="btn btn-outline-primary">Se connecter</a></li>
            <li class="nav-item px-3"><a href="<%=new_user_registration_path%>" class="btn btn-primary", id="signup" >S inscrire</a></li>
      </ul>
        <% end %>
      </ul>
    </div>
  </nav>

  <%= yield %>

      <footer class="footer font-small">
        <div class="container-fluid p-5">
          <div class="row">
            <div class="col">
              Photo
            </div>
            <div class="col">
              <div class="row">
                <div class="col"><p>Mobile app</p></div>
                <div class="col"><p>Community</p></div>
                <div class="col"><p>Company</p></div>
              </div>
            </div>
            <div class="col text-end">
              © 2022, Made is love, Team THP
            </div>
          </div>
        </div>
      </footer>
</body>
</html> 